include header

.dashboard
	nav.navbar.navbar-dark.bg-dark.navbar-expand-lg
		a.navbar-brand(href="/dashboard")
			img.w-100(src="images/logo2.png", alt="logo")
		button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
			span.navbar-toggler-icon

		#navbarNavAltMarkup.collapse.navbar-collapse
			.navbar-nav
				span.nav-item.mr-5(href='#') Вы вошли как 
					strong #{login}
					br
					a.badge.badge-pill.badge-danger(href="/") Выйти
				if (role == 'admin')
					button.btn.btn-sm.btn-outline-success.nav-item.mr-4(type="button" data-toggle="modal" data-target="#exampleModal") 
						//- .d-flex.align-items-center
						i.far.fa-user.mr-2
						| Добавить пользователя
					a.nav-item.d-flex.align-items-center.mr-4(href='/dashboard') 
						i.far.fa-building.mr-2
						| Добавить компанию

		
	section.container-fluid.animated.fadeIn.faster
		.row
			.col-lg-3.col-xl-2
				aside.navigate.mt-5
					ul
						if (role === 'admin')
							li
								a(href="#")
									.d-flex.align-items-center.justify-content-between
										span Клиенты и компании
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Заявки на звонок
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Пропуск ВНОС/ВЫНОС
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span ПОРЧА/УТРАЧА карт
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Постоянный доступ
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Заказ документов
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Пропуски на авто
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Пропуски на персону
									span.badge.badge-light 0
						li
							a(href="#")
								.d-flex.align-items-center.justify-content-between
									span Заявки на работы
									span.badge.badge-light 0
			.col-lg-9.col-xl-10
				.mt-5
					.dark-field.form-group.w-25
						.input-group.mb-3
							.input-group-prepend
								span.input-group-text#search
									i.fas.fa-search
							input#search.form-control(type="text" aria-describedby="search")
					h1.mb-4 Клиенты и компании
					table.table.table-dark.table-striped
						thead
							tr
								th(scope="col") Номер офиса
								th(scope="col") Фамилия
								th(scope="col") Имя
								th(scope="col") Отчество
								th(scope="col") Email
								th(scope="col")
						tbody
							if (typeof item !== 'undefined')
								each item in items
									include _clients--table-item
	include _add--user
include scripts